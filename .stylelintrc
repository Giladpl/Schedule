{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
